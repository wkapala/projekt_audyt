[Unit]
Description=System Audit Report Timer
Documentation=file:///opt/sysaudit/README.md
Requires=sysaudit.service

[Timer]
# Run every 6 hours
OnCalendar=00/6:00:00

# Run on boot if missed
Persistent=true

# Randomize start time by up to 5 minutes to avoid load spikes
RandomizedDelaySec=300

[Install]
WantedBy=timers.target
